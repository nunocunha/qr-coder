{
  "manifest_version": 2,
  "name": "QR Coder",
  "author": "Nuno Cunha",
  "version": "1",
  "description": "Encodes text selection, links and page URLs into a QR code.",
  "icons": {
    "16": "icons/qr-16.png",
    "24": "icons/qr-24.png",
    "32": "icons/qr-32.png",
    "48": "icons/qr-48.png",
    "64": "icons/qr-64.png",
    "96": "icons/qr-96.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background-scripts/qr-coder.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-scripts/qrcode.js",
        "content-scripts/qr-coder.js"
      ],
      "css": [
        "content-scripts/qr-coder.css"
      ],
      "run_at": "document_start"
    }
  ]
}